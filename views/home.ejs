<html>
    <head>
        <title>
            <%= title %>
        </title>
        <script src="https://kit.fontawesome.com/f4d9037195.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="heading">
            <i class="fa-solid fa-address-book"></i>
            My Contant List
        </h1>
        <div id="contacts-list-container">
            <ul>
                <% for( let i of contact_List) { %>
                    <li class="contact">
                        <div class="details">
                            <p><%= i.name %> </p>
                            <p><%= i.phone %></p>
                        </div>
                        <div class="del-key">
                            <a href="/delete-contact/?phone=<%=i.phone%>">
                                <i class="fa-solid fa-xmark"></i>
                            </a>
                        </div> 
                    </li>
                <% } %>
            </ul>
            
            <form action="", method="post" id="form-div">
                <input type="text" name="name" placeholder="Name" required>
                <input type="number" name="phone" placeholder="Phone" required>
                <button type="submit">Add</button>
            </form>
        </div>
        
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>